<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.moonlizards.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Lizard1"/>

    <TextView
        android:id="@+id/textview_fed_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="well-fed:" />

    <TextView
        android:id="@+id/textview_rested_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="energy:" />

    <TextView
        android:id="@+id/textview_cleaned_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cleanliness:" />

    <TextView
        android:id="@+id/textview_happy_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="happiness:" />

    <TextView
        android:id="@+id/textview_age_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="age:" />
    </LinearLayout>






